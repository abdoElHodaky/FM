RewriteEngine On
RewriteRule ^([a-zA-Z]+)$ $1.php
#################################
RewriteRule ^([a-zA-Z]+)/([a-zA-Z]+)$ $1.php?action=$2
#######################################
RewriteRule ^([a-zA-Z]+)/([a-zA-Z]+)/(.+)\.([a-zA-Z]+)$ $1.php?action=$2&name=$3.$4
####################################
RewriteRule ^([a-zA-Z]+)/([a-zA-Z]+)/([0-9a-zA-Z]+)$ $1.php?action=$2&name=$3
########################################
RewriteRule ^([a-zA-Z]+)$ $1/$2.php
####################################
